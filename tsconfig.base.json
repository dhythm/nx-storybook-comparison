{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-storybook-comparison/storybook-vite": [
        "libs/storybook-vite/src/index.ts"
      ],
      "@nx-storybook-comparison/storybook-webpack": [
        "libs/storybook-webpack/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
